<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration Tracker"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay hydrated throughout the day"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSettings"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:icon="@drawable/ic_settings" />

        </LinearLayout>

    </LinearLayout>

    <!-- Water Intake Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/waterIntakeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Water Drop Icon -->
            <ImageView
                android:id="@+id/imageViewWaterDrop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_water"
                android:layout_marginBottom="16dp"
                app:tint="@color/water_bottle_color"
                android:alpha="0.9" />

            <!-- Water Count -->
            <TextView
                android:id="@+id/textViewWaterCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 8"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="glasses of water"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBarWater"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:progress="0"
                android:max="100"
                android:progressTint="@color/primary_color"
                android:progressBackgroundTint="@color/text_hint"
                android:layout_marginBottom="8dp" />

            <!-- Progress Percentage -->
            <TextView
                android:id="@+id/textViewWaterPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSubtractWater"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:text="-"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddWater"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    android:elevation="2dp" />

            </LinearLayout>

            <!-- Reset Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonResetWater"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Daily Goal"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:icon="@drawable/ic_timer"
                app:iconSize="18dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Reminder Settings Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/reminderCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/waterIntakeCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notifications"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/primary_color" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hydration Reminders"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get reminded to drink water at regular intervals"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Tips Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tipsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/reminderCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lightbulb"
                    android:layout_marginEnd="12dp"
                    android:tint="@color/accent_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration Tips"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Drink a glass of water when you wake up\n• Keep a water bottle nearby\n• Set reminders throughout the day\n• Listen to your body's thirst signals"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
