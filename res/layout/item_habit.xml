<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Habit Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Emoji -->
            <TextView
                android:id="@+id/textViewEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸƒâ€â™€ï¸"
                android:textSize="24sp"
                android:layout_marginEnd="12dp" />

            <!-- Habit Name and Description -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewHabitName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drink Water"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/textViewHabitDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay hydrated throughout the day"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Menu Button -->
            <ImageButton
                android:id="@+id/buttonMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="More options" />

        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Progress Text -->
            <TextView
                android:id="@+id/textViewProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 / 8"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/textViewCountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="glasses"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Progress Percentage -->
            <TextView
                android:id="@+id/textViewPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37%"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarHabit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="37"
            android:max="100"
            android:progressTint="@color/primary_color"
            android:progressBackgroundTint="@color/text_hint" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Decrease Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDecrease"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="-"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="18dp" />

            <!-- Increase Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonIncrease"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="18dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


